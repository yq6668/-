}
.pppp {
  padding-left: 3%;
  padding-right: 3%;
  padding-bottom: 30rpx;
}
.pppp .global-sort {
  clear: both;
  margin-top: 60rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}
.pppp .global-sort .nav {
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.pppp .global-sort .nav > view {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  background-color: #ebebeb;
}
.pppp .global-sort .nav .diqu {
  flex: 14;
  color: #222222;
  background-color: #ebebeb;
}
.pppp .global-sort .nav .leiji {
  flex: 9;
  background-color: #ffefe6;
  color: #f55253;
}
.pppp .global-sort .nav .siwang {
  flex: 8;
  background-color: #e9e3e3;
}
.pppp .global-sort .nav .zhiyu {
  flex: 9;
  background-color: #cee8dd;
  color: #178B50;
}
.pppp .global-sort .scroll-view .sort {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
}
.pppp .global-sort .scroll-view .sort > view {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  border-bottom: 2rpx solid #d8d8dd;
}
.pppp .global-sort .scroll-view .sort .nav-a {
  flex: 14;
  text-align: center;
  font-size: 26rpx;
}
.pppp .global-sort .scroll-view .sort .nav-b {
  flex: 9;
}
.pppp .global-sort .scroll-view .sort .nav-c {
  flex: 8;
}
.pppp .global-sort .scroll-view .sort .nav-d {
  flex: 9;
}
.container {
  clear: both;
  box-sizing: border-box;
  width: 94%;
  margin: 0 auto;
  margin-top: 240rpx;
  background-color: #fff;
  height: 700rpx;
  line-height: 700rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  /*  ！！注意：这里也一定要设置个百分比宽高，不然图表在页面上不显示 */
}
.container ec-canvas {
  padding-top: 100rpx;
  width: 100%;
  height: 90%;
}
.show2 {
  padding: 60rpx 40rpx 40rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  z-index: 9999999999;
}
.show2 > .view {
  padding-top: 30rpx;
}
.show2 .say {
  font-size: 34rpx;
  text-align: center;
  color: #333;
  font-weight: 700;
}
.show2 .say i {
  color: #e10000;
}
.icon-close {
  position: fixed;
  z-index: 9999999999;
  top: 75%;
  left: 50%;
  margin-left: -40rpx;
